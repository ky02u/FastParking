<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                   <h3>Realizar una reserva</h3>
                    <form action="/reserva/add" method="POST">
                        <div class="form-group">
                            <input type="date" name="fecha" class="form-control" placeholder="fecha" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="time" name="hora" class="form-control" placeholder="hora">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>