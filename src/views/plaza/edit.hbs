<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/plaza/edit/{{plaza.id_plaza}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="localizacion" value="{{plaza.localizacion}}" class="form-control" placeholder="Localizacion" autofocus> 
                        </div>
                        <div class="form-group">
                        <div class="form-group">
                            <label class="form-label mt-4">Tipo de servicio:</label>
                            <select name="tipo_servicio" class="form-control">
                                <option value="carro">Carro</option>
                                <option value="moto">Moto</option>
                            </select>
                         </div>                         
                            
                            <input type="text" name="nivel" class="form-control"  value="{{plaza.nivel}}" placeholder="Nivel">
                        <div class="form-group">
                            <label class="form-label mt-4">estado:</label>
                            <select name="estado"  class="form-control" >                               
                                <option value="libre" >Libre</option> 
                                <option value="ocupado" >Ocupado</option>
                                <option value="mantenimiento" >Mantenimiento</option> 
                            </select>
                         </div>                              
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>