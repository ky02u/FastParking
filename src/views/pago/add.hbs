<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/pago/add" method="POST">
                      
                        <div class="form-group">
                        <div class="form-group">
                            <label class="form-label mt-4">Tipo de pago:</label>
                            <select name="tipo_servicio" value="<%- data.tipo_servicio %>" class="form-control">
                                <option value="carro" selected>Sin deuda</option>
                                <option value="moto">Con deuda</option>+
                            </select>
                         </div>                         
                            
                            <input type="number" name="costo" class="form-control" placeholder="Valor">
                   
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>