<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/vehiculo/edit/{{vehiculo.id_vehiculo}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{vehiculo.placa}}" name="placa" class="form-control" placeholder="Placa" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="tarjeta_propiedad" value="{{vehiculo.tarjeta_propiedad}}" class="form-control" placeholder="Tarjeta Propiedad">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>